<h4 class='d-flex justify-content-between mb-4'>
  <span>Post</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary'  %>
</h4>

<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class='card mb-3 post-card'>
      <div class='card-body'>
        <div class='row'>
          <div class='col-md-2'>
            <% if post.header_image.present? %>
              <%= image_tag(post.header_image, width: "180", height: "180") %>
            <% end %>
          </div>
          <div class='col-md-10'>
            <% if post.published? %>
              <span class="btn-info btn-sm">
                <b>Published</b>
              </span>&nbsp;
              <%= time_ago_in_words(post.published_at)%> ago
            <% else %>
              <span class="btn-warning btn-sm">
                <b>Unpublished</b>
              </span>&nbsp;
            <% end %>
            <h5 class='card-title mb-1 text-dark'><%= post.title %></h5>
            <p class='text-secondary mb-0'><%= post.description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
