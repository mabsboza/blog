<h4 class='d-flex justify-content-between mb-4'>
  <span>Post</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary'  %>
</h4>

<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class='card mb-3 post-card'>
      <div class='card-body'>
        <div class='row'>
          <div class='col-md-2'>
            <% if post.header_image.present? %>
              <div class="header-image" style="background-image: url('<%= rails_blob_url(post.header_image) %>'); background-position: center"></div>
            <% end %>
          </div>
          <div class='col-md-10'>
            <% if post.published? %>
              <span style='badge badge-secondary'>
                <b>Published</b>
              </span>
              <%= time_ago_in_words(post.published_at)%> ago
            <% else %>
              <b>Unpublished</b>
            <% end %>
            <h5 class='card-title mb-1 text-dark'><%= post.title %></h5>
            <p class='text-secondary mb-0'><%= post.description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
