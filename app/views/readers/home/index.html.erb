<div class='row'>
  <% @posts.each do |post| %>
    <div class="card mb-3" style="max-width: 530px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag(post.header_image, width: "170", height: "250")%>
        </div>
        <div class="col-md-8">
          <div class="card-body d-flex flex-column">
            <h5 class='card-title'><%= post.title %></h5>
            <p class='text-secondary mb-0'><%= truncate(post.description, length: 200) %></p>
            <p class="card-text"><small class="text-muted"><%= time_ago_in_words(post.published_at)%> ago</small></p>
            <%= link_to "Read Post", blog_post_path(post), class:"btn btn-primary mt-auto"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>